<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SuccessActivity">
        <TextView
            android:layout_marginLeft="60dp"
            android:textColor="#0E0C0C"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:layout_gravity="center"
            android:text="Chúc mừng bạn đặt hàng thành công"
            android:id="@+id/successtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/blacksuccess"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/successtext"
            android:src="@drawable/success1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/greensuccess"
            android:visibility="gone"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/successtext"
            android:src="@drawable/success"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
</RelativeLayout>