<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/relative_layout_order">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearcardviewalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:background="@mipmap/ic_launcher"
        android:id="@+id/imagevieworder"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:layout_below="@id/imagevieworder"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#100f0f"
        android:maxLines="1"
        android:id="@+id/textvieworder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="200+"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#777474"
        android:maxLines="1"
        android:layout_below="@id/textvieworder"
        android:layout_marginLeft="10dp"
        android:id="@+id/textviewset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v7.widget.CardView>