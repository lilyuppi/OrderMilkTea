<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_suggest">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        android:id="@+id/imageviewsuggest_card">

        <ImageView
            android:id="@+id/imageviewsuggest"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />
    </android.support.v7.widget.CardView>

    <TextView
        android:text="Nam Hot"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#100f0f"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageviewsuggest_card"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/textviewsuggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/soluongdat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewsuggest"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/imageviewsuggest_card"
        android:maxLines="1"
        android:text="200+"
        android:textColor="#777474"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearlayout_discount"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/soluongdat"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@id/imageviewsuggest_card"
        android:background="@drawable/bg_sub_item"
        android:maxLines="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:src="@drawable/ic_up"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/sale"
            android:text="@string/airpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/airPay"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/soluongdat"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/linearlayout_discount"
        android:layout_toRightOf="@id/imageviewsuggest_card"
        android:background="@drawable/bg_sub_item"
        android:maxLines="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView

            android:src="@drawable/airpay"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:paddingLeft="5dp"
            android:text="@string/airpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/freeShip"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/soluongdat"
        android:layout_toEndOf="@+id/airPay"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@id/imageviewsuggest_card"
        android:background="@drawable/bg_sub_item"
        android:maxLines="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:src="@drawable/ic_motor"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:paddingLeft="5dp"
            android:text="@string/freeship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>